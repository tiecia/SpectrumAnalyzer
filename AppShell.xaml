<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AudioLoopbackTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AudioLoopbackTest"
    FlyoutBehavior="Disabled"
    Title="FFT Visualizations">
    
    <TabBar>
        <Tab Title="Instantaneous Spectrum">
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>
        <Tab Title="Waterfall Spectrogram">
            <ShellContent
                ContentTemplate="{DataTemplate local:WaterfallView}"
                Route="MainPage"/>
        </Tab>
    </TabBar>
</Shell>
