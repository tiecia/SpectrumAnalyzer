<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AudioLoopbackTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AudioLoopbackTest"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Title="Instantaneous FFT Spectrum">
            <ShellContent
                Title="Instantaneous FFT Spectrum"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>
        <Tab Title="FFT Waterfall">
            <ShellContent
                Title="FFT Waterfall"
                ContentTemplate="{DataTemplate local:WaterfallView}"
                Route="MainPage"/>
        </Tab>
    </TabBar>
</Shell>
