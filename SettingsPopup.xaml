<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:audioLoopbackTest="clr-namespace:AudioLoopbackTest"
               x:Class="AudioLoopbackTest.SettingsPopup"
               x:DataType="audioLoopbackTest:SettingsPopup"
               Size="300,200">
    
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Button Text="+ Bins" Clicked="IncreaseBins"/>
            <Button Text="- Bins" Clicked="DecreaseBins"/>
        </HorizontalStackLayout>
        
        <CheckBox x:Name="BinFftCheckbox" CheckedChanged="OnBinFFTChanged"/>
        <Button Text="Close" Clicked="OnCloseButtonClicked"/>
    </VerticalStackLayout>

</toolkit:Popup>
